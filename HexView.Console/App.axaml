<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:Consolonia.Themes;assembly=Consolonia.Themes"
             x:Class="HexView.Console.App"
             RequestedThemeVariant="Default">
  <Application.Resources>
    <x:Double x:Key="Spacing">1</x:Double>
    <Thickness x:Key="FullMargin">1,1,1,1</Thickness>
    <Thickness x:Key="LeftRightBottomMargin">1,0,1,1</Thickness>
    <x:Double x:Key="FontSize">1</x:Double>

  </Application.Resources>
  
  <Application.Styles>
    <themes:FluentTheme />
  </Application.Styles>

</Application>
